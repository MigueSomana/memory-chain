{
  "name": "memorychain-blockchain",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "clean": "rimraf cache artifacts",
    "compile": "hardhat compile",
    "deploy:amoy": "hardhat run scripts/deploy.ts --network amoy",
    "verify:amoy": "hardhat verify --network amoy $CONTRACT_ADDRESS",
    "typechain": "hardhat typechain",
    "build": "npm run clean && npm run compile && npm run typechain",
    "postdeploy:copy-abi": "node scripts/copy-abi-to-backend.js"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@types/node": "^20.11.0",
    "dotenv": "^16.4.5",
    "hardhat": "^2.22.6",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
